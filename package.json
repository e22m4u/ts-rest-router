{
  "name": "@e22m4u/ts-rest-router",
  "version": "0.1.1",
  "description": "Controllers-based REST router implementation for TypeScript",
  "author": "e22m4u <e22m4u@yandex.ru>",
  "license": "MIT",
  "keywords": [
    "rest",
    "http",
    "router",
    "server",
    "controller"
  ],
  "homepage": "https://github.com/e22m4u/ts-rest-router",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/e22m4u/ts-rest-router.git"
  },
  "type": "module",
  "types": "./dist/esm/index.d.ts",
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.cjs",
  "exports": {
    "types": "./dist/esm/index.d.ts",
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.cjs"
  },
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build:esm": "tsc --build",
    "build:cjs": "rimraf ./dist/cjs && node --no-warnings=ExperimentalWarning build-cjs.js",
    "build": "rimraf dist && npm run build:esm && npm run build:cjs",
    "postbuild": "rimraf ./dist/**/*.spec.* --glob ./dist/tsconfig.tsbuildinfo",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format": "prettier --write \"./src/**/*.ts\"",
    "test": "npm run lint && c8 --reporter=text-summary mocha --bail",
    "test:coverage": "npm run lint && c8 --reporter=text mocha --bail",
    "prepare": "husky"
  },
  "dependencies": {
    "@e22m4u/js-format": "~0.1.0",
    "@e22m4u/js-service": "~0.2.0",
    "@e22m4u/js-trie-router": "~0.0.1",
    "@e22m4u/ts-data-schema": "~0.0.1",
    "@e22m4u/ts-reflector": "~0.1.0",
    "debug": "~4.4.0",
    "http-errors": "~2.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "~19.7.1",
    "@commitlint/config-conventional": "~19.7.1",
    "@eslint/js": "~9.20.0",
    "@types/chai": "~5.0.1",
    "@types/debug": "~4.1.12",
    "@types/http-errors": "~2.0.4",
    "@types/mocha": "~10.0.10",
    "@types/node": "~22.13.4",
    "c8": "~10.1.3",
    "chai": "~5.2.0",
    "esbuild": "~0.25.0",
    "eslint": "~9.20.1",
    "eslint-config-prettier": "~10.0.1",
    "eslint-plugin-chai-expect": "~3.1.0",
    "eslint-plugin-mocha": "~10.5.0",
    "husky": "~9.1.7",
    "mocha": "~11.1.0",
    "prettier": "~3.5.1",
    "rimraf": "~6.0.1",
    "tsx": "~4.19.3",
    "typescript": "~5.7.3",
    "typescript-eslint": "~8.24.1"
  }
}
